{% extends "base.jinja2" %}
{% block head %}
    <!-- Custom styles for form -->
    <link href="/assets/css/signin.css" rel="stylesheet">
{% endblock head %}

{% block body %}


    <div class="container text-center">
        <h2><a href="/"> URL Dropit </a> -- Drop your download link here to save it in your dropbox</h2>
        {% if error %}
            <div class="alert alert-danger">
                {{ error }}
            </div>
        {% endif %}

        <form action="/" method="post" class="form-signin">
            <h2 class="form-signin-heading">Enter the Download URL</h2>
            <input type="text" class="form-control" placeholder="Enter the Url" name="url" autofocus>
            <input type="text" class="form-control" placeholder="Name of file (Optional)" name="filename">
            <button class="btn btn-lg btn-primary btn-block" type="submit">Save to Dropbox</button>
        </form>
    </div>
{% endblock %}
